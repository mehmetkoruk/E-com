@model LoginModel
@{
    ViewData["Title"] = "Login";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<div class="bg-primary text-white p-1 m-1">
    <h2>Login</h2>
</div>
<div class="text-danger" asp-validation-summary="All">
</div>
<form asp-action="Login" method="post">
    <input type="hidden" name="returnUrl" value="@ViewBag.returnUrl" />


    <div class="form-group">
        <label asp-for="Email"></label>
        <input asp-for="Email" class="form-control" />
    </div>
    <div class="form-group">
        <label asp-for="Password"></label>
        <input asp-for="Password" class="form-control" />
    </div>
    <div class="form-group">
        <input type="submit" formmethod="post" class="btn btn-primary" value="Giriş" style="margin-right:10px" />
        <a  asp-controller="Admin" asp-action="Create" asp-area="AdminArea">Kaydol</a>
    </div>


</form>






