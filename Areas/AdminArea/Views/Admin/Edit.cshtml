@model EticaretShoes.Models.ApplicationUser
@{
    ViewData["Title"] = "Edit";
    Layout = "~/Areas/AdminArea/Views/_Layout.cshtml";
}

<h2>Admin Controller Edit</h2>


<div class="bg-primary text-white p-1 m-1">
    <h2>Edit User</h2>
</div>

<form asp-action="Edit" asp-controller="Admin" asp-area="AdminArea" method="post">

    <div class="text-danger" asp-validation-summary="All"></div>

    <div class="form-group">
        <label asp-for="Id"></label>
        <input asp-for="Id" class="form-control" disabled />

    </div>


    <div class="form-group">
        <label for="Password">Password</label>
        <input name="Password" class="form-control" />

    </div>


    <div class="form-group">
        <label asp-for="Email"></label>
        <input asp-for="Email" class="form-control" />

    </div>

    <input type="submit" class="btn btn-primary" value="Submit" />

    <a asp-action="Index" asp-controller="Admin" asp-area="AdminArea" class="btn btn-warning">Geri Dön</a>
</form>




