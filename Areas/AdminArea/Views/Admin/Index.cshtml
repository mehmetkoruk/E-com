@model IEnumerable<EticaretShoes.Models.ApplicationUser>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Areas/AdminArea/Views/_Layout.cshtml";
}

<h2>Admin Controller Index</h2>


<div class="bg-primary text-white p-1 m-1">
    <h2>User List</h2>
</div>

<table class="table table-bordered table-striped m-1 p-1 table-sm">
    <tr>
        <th>User ID</th>
        <th>User Name</th>
        <th>Email</th>
        <th>Process</th>
    </tr>
    @if (Model.Count() == 0)
    {
        <tr>
            <td colspan="4" class="text-center">
                No Users
            </td>
        </tr>
    }
    else
    {
        @foreach (var item in Model)
        {
<tr>
    <td>@item.Id</td>
    <td>@item.UserName</td>
    <td>@item.Email</td>
    <td>
        <form asp-route-id="@item.Id" asp-action="Delete" asp-area="AdminArea" asp-controller="Admin" method="post">
            <button class="btn btn-danger" type="submit">Sil</button>

        </form>
        <a asp-action="Edit" asp-controller="Admin" asp-area="AdminArea" asp-route-id="@item.Id" class="btn btn-primary">Edit</a>
    </td>
</tr>
        }
    }
</table>

<a asp-action="Create" asp-controller="Admin" asp-area="AdminArea" class="btn btn-warning">Create</a>

