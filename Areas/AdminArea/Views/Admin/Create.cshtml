@model EticaretShoes.Models.RegisterModel
@{
    ViewData["Title"] = "Create";
    Layout = "~/Areas/AdminArea/Views/_Layout.cshtml";
}

<h2>Admin Controller Create</h2>


<div class="bg-primary text-white p-1 m-1">
    <h2>Create User</h2>
</div>

<form asp-action="Create" asp-controller="Admin" asp-area="AdminArea" method="post">

    <div class="text-danger" asp-validation-summary="All"></div>

    <div class="form-group">
        <label asp-for="UserName"></label>
        <input asp-for="UserName" class="form-control" />

    </div>


    <div class="form-group">
        <label asp-for="Password"></label>
        <input asp-for="Password" class="form-control" />

    </div>


    <div class="form-group">
        <label asp-for="Email"></label>
        <input asp-for="Email" class="form-control" />

    </div>

    <input type="submit"  class="btn btn-primary" value="Submit" />

    <a asp-action="Index" asp-controller="Admin" asp-area="AdminArea" class="btn btn-warning">Geri Dön</a>
</form>



